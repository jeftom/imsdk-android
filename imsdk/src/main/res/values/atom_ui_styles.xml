<resources>
    <style name="AtomAppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>
    <!-- Base application theme. -->

    <style name="FlutterTheme" parent="AtomAppTheme">
        <item name="android:windowBackground">@color/atom_ui_white</item>
<!--        <item name="android:statusBarColor">#ffffff</item>-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
<!--        <item name="android:windowAnimationStyle">@style/windowAnimation</item>-->
    </style>
    <style name="AtomSplashTheme" parent="AtomAppTheme">
        <!--<item name="android:windowBackground">@color/atom_ui_green_8e</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="windowNoTitle">true</item>-->
    </style>

    <style name="AtomNoTranslucent" parent="AtomAppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="atom_ui_MyTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item> //标题字体
        <item name="android:textStyle">bold</item>
    </style>

    <style name="atom_ui_anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/atom_ui_slide_in</item>
        <item name="android:windowExitAnimation">@anim/atom_ui_slide_out</item>
    </style>

    <style name="atom_ui_my_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/atom_ui_trans_dark_gray</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>


    <style name="atom_ui_DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/atom_ui_slide_up</item>
        <item name="android:windowExitAnimation">@anim/atom_ui_slide_down</item>
    </style>
    <style name="atom_ui_MediaButtonCompat">
        <item name="android:background">@null</item>
        <item name="android:layout_width">71dip</item>
        <item name="android:layout_height">52dip</item>
    </style>

    <style name="atom_ui_MediaButtonCompat.Previous">
        <item name="android:src">@drawable/atom_ui_vvc_ic_media_previous</item>
    </style>

    <style name="atom_ui_MediaButtonCompat.Next">
        <item name="android:src">@drawable/atom_ui_vvc_ic_media_next</item>
    </style>

    <style name="atom_ui_MediaButtonCompat.Play">
        <item name="android:src">@drawable/atom_ui_vvc_ic_media_play</item>
    </style>

    <style name="atom_ui_MediaButtonCompat.Ffwd">
        <item name="android:src">@drawable/atom_ui_vvc_ic_media_ff</item>
    </style>

    <style name="atom_ui_MediaButtonCompat.Rew">
        <item name="android:src">@drawable/atom_ui_vvc_ic_media_rew</item>
    </style>

    <style name="atom_ui_MediaButtonCompat.Pause">
        <item name="android:src">@drawable/atom_ui_vvc_ic_media_pause</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/atom_ui_shadow_left</item>
        <item name="shadow_right">@drawable/atom_ui_shadow_right</item>
        <item name="shadow_bottom">@drawable/atom_ui_shadow_bottom</item>
    </style>
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/atom_ui_file_sys_cost</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/translate</item>
    </style>
    <!--透明，有任务栏电量时间等-->
    <style name="NoTitleTranslucentTheme" parent="AppTheme1">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/translate</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


