<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:background="@drawable/atom_ui_robot_question_list_bg2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="25dp"
                android:layout_toLeftOf="@id/titleImage"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="如何快速玩转QTalk，小拿带你上路～～"
                android:textColor="#666666"
                android:textSize="14sp" />

            <com.qunar.im.ui.view.IconView
                android:id="@+id/iconClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:text="@string/atom_ui_new_error_line"
                android:textSize="14sp" />


        </RelativeLayout>

        <ListView
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/question_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/head"
            android:divider="@null"
            android:scrollbars="none"></ListView>


    </RelativeLayout>


</LinearLayout>